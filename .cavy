{
  "lint": {
    "commands": [
      {
        "name": "eslint",
        "targets": ["scripts"],
        "test": "npx --no-install --quiet eslint",
        "fix": "npx --no-install --quiet eslint --fix"
      },
      {
        "name": "prettier",
        "targets": ["."],
        "test": "npx --no-install --quiet prettier --check",
        "fix": "npx --no-install --quiet prettier --write"
      }
    ]
  },
  "clean": {
    "commands": [
      {
        "name": "dist",
        "dirs": ["dist"],
        "files": []
      }
    ]
  }
}
